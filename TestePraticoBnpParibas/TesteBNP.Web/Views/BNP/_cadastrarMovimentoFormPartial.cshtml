@model TesteBNP.Web.Models.MovimentoManualViewModel

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Novo Cadastro
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-12">
                        <form role="form" method="post" action="/bnp/cadastrarmovimento/">
                            <div class="form-group col-lg-2">
                                <label>Mês</label>
                                <input class="form-control" placeholder="Mês" maxlength="2" min="1" name="mes">
                            </div>
                            <div class="form-group col-lg-2">
                                <label>Ano</label>
                                <input class="form-control" placeholder="Ano" maxlength="4" min="4" name="ano">
                            </div>
                            <div class="form-group col-lg-3">
                                <label>Produto</label>
                                <select class="form-control" name="codProduto">
                                    @foreach (var item in Model.ProdutoLista)
                                    {
                                        <option value="@item.CodProduto">@item.CodProduto</option>
                                    }
                                </select>
                            </div>
                            <div class="form-group col-lg-3">
                                <label>Cosif</label>
                                <select class="form-control" name="codCosif">
                                    @foreach (var item in Model.ProdutoCosifLista)
                                    {
                                        <option value="@item.CodigoCosif">@item.CodigoCosif</option>
                                    }
                                </select>
                            </div>
                            <div class="form-group col-lg-2">
                                <label>Valor</label>
                                <input type="number" class="form-control" placeholder="Valor" name="valor">
                            </div>
                            <div class="form-group col-lg-12">
                                <label>Text area</label>
                                <textarea class="form-control" rows="3" placeholder="Descrição" name="descricao"></textarea>
                            </div>

                            <div class="form-group col-lg-12">
                                <button type="submit" class="btn btn-success col-lg-2">Salvar Dados</button>
                                <button type="reset" class="btn btn-danger col-lg-2">Limpar Dados</button>
                            </div>

                        </form>
                    </div>


                </div>
                <!-- /.col-lg-6 (nested) -->
            </div>
            <!-- /.row (nested) -->
        </div>
        <!-- /.panel-body -->
    </div>
    <!-- /.panel -->
</div>
<!-- /.col-lg-12 -->